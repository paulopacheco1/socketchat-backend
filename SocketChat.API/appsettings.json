{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "NLog": {
    "internalLogLevel": "Info",
    "internalLogFile": "C:\\Temp\\App\\Logging\\internal-nlog-AspNetCore.txt",
    "extensions": {
      "NLog.Web.AspNetCore": {
        "assembly": "NLog.Web.AspNetCore"
      }
    },
    "targets": {
      "debugFile": {
        "type": "File",
        "fileName": "C:\\Temp\\App\\Logging\\App-Debug-${shortdate}.log",
        "layout": "${longdate} [${uppercase:${level}}] ${message} ${exception:format=tostring}"
      },
      "prodFile": {
        "type": "File",
        "fileName": "C:\\Temp\\App\\Logging\\App-Production-${shortdate}.log",
        "layout": "${longdate} [${uppercase:${level}}] ${message} ${exception:format=tostring}"
      },
      "console": {
        "type": "Console",
        "layout": "$[${level:truncate=5:tolower=true}]: ${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "debugFile"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "prodFile"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "console"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": "true"
      },
      {
        "logger": "System.Net.Http.*",
        "maxLevel": "Info",
        "final": "true"
      }
    ]
  },

  "AllowedHosts": "*",

